<div class="d-flex flex-column align-items-center text-primary-dark">
    {{ form_start(newsletterForm) }}

    <div class="text-left m-1 my-3">
        {{ form_row(newsletterForm.choice1) }}
        {{ form_row(newsletterForm.choice2) }}
        {{ form_row(newsletterForm.choice3) }}
    </div>
    <div class="d-flex justify-content-between flex-wrap">
        {{ form_widget(newsletterForm.email, { 'attr': {'class': 'm-1 w-auto border-primary'} }) }}
        {{ form_widget(newsletterForm.submit, { 'attr': {'class': 'm-1 mx-auto border-light text-primary-dark btn-secondary'} }) }}
        {{ form_errors(newsletterForm) }}
    </div>

    {{ form_end(newsletterForm) }}
</div>
