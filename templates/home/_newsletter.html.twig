<div class="text-primary-dark d-flex flex-column align-items-center">
    {{ form_start(newsletterForm) }}

    <div class="text-left my-3">
        {{ form_row(newsletterForm.choice1) }}
        {{ form_row(newsletterForm.choice2) }}
        {{ form_row(newsletterForm.choice3) }}
    </div>
    <div class="d-flex justify-content-center flex-nowrap">
        {{ form_widget(newsletterForm.email, { 'attr': {'class': 'mr-1 border-primary'} }) }}
        {{ form_widget(newsletterForm.submit, { 'attr': {'class': 'btn-outline-secondary'} }) }}
        {{ form_errors(newsletterForm) }}
    </div>

    {{ form_end(newsletterForm) }}
</div>
