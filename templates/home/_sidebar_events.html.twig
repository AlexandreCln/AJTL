
<a href="{{ path('agenda') }}" class="mt-3 btn btn-secondary text-primary-dark shadow">Tout voir</a>

{% for i in 1..5 %}
    <div class="p-1 mt-3 card text-primary-dark shadow">
        <div>
            <div class="event-info d-flex justify-content-between text-nowrap">
                <p class="m-0 ml-2 badge badge-{{ i % 2 == 0 ? 'danger':'warning' }} text-light">
                    {{ i % 2 == 0 ? 'Jeux de Rôle':'Jeux de Plateau' }}
                </p>
                <p class="m-0 mr-2">8 Mai 2020 à 18:00</p>
            </div>
            <p class="m-2">{{ i % 2 == 0 ? 'Donjon & Dragon':'Mah-Jong' }}</p>
        </div>
        <div class="event-info d-flex justify-content-between">
            <p class="m-0 ml-3"><i class="fas fa-home"></i> Foyer des Seniors</p>
            <p class="m-0 mr-3"><i class="fas fa-users"></i> {{ i % 2 == 0 ? '4 places restantes':'Complet' }}</p>
            {#        Todo: place et placeS #}
        </div>
    </div>
{% endfor %}
