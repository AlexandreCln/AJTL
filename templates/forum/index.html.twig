{% extends 'layout.html.twig' %}

{% block title %}Forum{% endblock %}

{% block body %}
    <div class="container forum-index">
        <h1 class="mt-5 mb-0 text-center text-lg-left text-primary-dark">Forum</h1>
        <hr class="mt-2 mb-5">
            <ol class="p-2 breadcrumb">
                <li class="breadcrumb-item"><a class="text-primary-dark" href="#">Forum</a></li>
                <li class="breadcrumb-item"><a class="text-primary-dark" href="#">Catégories</a></li>
                <li class="breadcrumb-item active" aria-current="page">Sujet actuel</li>
            </ol>
        {% for i in 1..2 %}
            <div class="my-3 card border-primary">
                <div class="card-header bg-primary-dark">
                    <h2 class="m-0 text-light bold">Jeux de Rôle</h2>
                </div>
                <table class="m-0 card-table table text-center">
                    <thead>
                    <tr class="bg-primary text-light">
                        <th class="p-0 pl-3 border-0 font-weight-normal text-left" scope="col">CATÉGORIES</th>
                        <th class="p-0 border-0 font-weight-normal" scope="col">
                            <div class="pr-1">SUJETS</div>
                        </th>
                    </tr>
                    </thead>
                    <tbody class="text-primary-dark">
                    {% for i in 1..3 %}
                        <tr>
                            <td class="pl-3 text-left">
                                <a class="text-primary-dark" href="">
                                    <i class="fas fa-xs fa-flip-horizontal fa-comment-alt"></i> Sujet avec un titre
                                </a>
                            </td>
                            <td>303</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="my-3 card border-primary">
                <div class="card-header bg-primary-dark">
                    <h2 class="m-0 text-light bold">Grandeur Nature</h2>
                </div>
                <table class="m-0 card-table table text-center">
                    <thead>
                    <tr class="bg-primary text-primary-dark">
                        <th class="p-0 pl-3 border-0 font-weight-normal text-left" scope="col">CATÉGORIES</th>
                        <th class="p-0 border-0 font-weight-normal" scope="col">
                            <div class="pr-1">POSTS</div>
                        </th>
                    </tr>
                    </thead>
                    <tbody class="text-primary-dark">
                    {% for i in 1..2 %}
                        <tr>
                            <td class="pl-3 text-left">
                                <a class="text-primary-dark" href="">
                                    <i class="mr-1 fas fa-sm fa-flip-horizontal fa-comment"></i>Sujet avec un titre
                                </a>
                                <br>
                                <p class="m-0 unread text-primary">7 messages non lus</p>
                            </td>
                            <td>303</td>
                        </tr>
                    {% endfor %}
                    <tr>
                        <td class="pl-3 text-left">
                            <a class="text-primary-dark" href="">
                                <i class="mr-1 fas fa-sm fa-flip-horizontal fa-comment"></i>Sujet avec un titre
                            </a>
                            <br>
                        </td>
                        <td>303</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        {% endfor %}
    </div>
{% endblock %}
