<form method="post" action="{{ path('newsletter_theme_delete', {'id': newsletter_theme.id}) }}" onsubmit="return confirm(
    'Supprimer ce thème de Newsletter ?' + '\n'  +
     'Il y à actuellement x abonnés'
    );">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ newsletter_theme.id) }}">
    <button class="btn p-0"><i class="far fa-trash-alt text-danger"></i></button>
</form>
