{% extends 'layout.html.twig' %}

{% block title 'Changer de mot de passe' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('card_form_theme') }}
{% endblock %}

{% block body %}
    <div class="pt-4 container">
        <div class="wrap shadow">
            <div class="header-title">
                <span class="title">
                    Changez de mot de passe !
                </span>
            </div>

            {% form_theme registrationForm 'form_themes/card_form_theme.html.twig' %}

            <div class="m-3">
                {{ form_start(registrationForm) }}
                    {{ form_widget(registrationForm) }} {# A shortcut for calling form_row() on each field #}
                    <div>
                        <small>
                            Veuillez entrer votre adresse email et nous vous enverrons un lien pour modifier
                            votre mot de passe.
                        </small>
                    </div>

                    <div class="mt-4 container-form-btn">
                        <button type="submit" class="form-btn">Envoyer la demande</button>
                    </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}