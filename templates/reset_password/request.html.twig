{% extends 'layout.html.twig' %}

{% block title 'Changer de mot de passe' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('card_form_theme') }}
{% endblock %}

{% block body %}

    <div class="pt-4 container">
        <div class="wrap shadow">
            <div class="header-title">
            <span class="title">
                Changez de mot de passe !
            </span>
                {% for flashError in app.flashes('danger') %}
                    <div class="alert alert-error" role="alert">{{ flashError }}</div>
                {% endfor %}
            </div>

            {% form_theme requestForm 'form_themes/card_form_theme.html.twig' %}

            {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }} {# A shortcut for calling form_row() on each field #}

            <div>
                <small>
                    Veuillez entrer votre adresse email et nous vous enverrons un lien pour modifier
                    votre mot de passe.
                </small>
            </div>

            <div class="mt-4 container-form-btn">
                <button type="submit" class="form-btn">Envoyer la demande de changement</button>
            </div>
            {{ form_end(requestForm) }}
        </div>
    </div>
{% endblock %}