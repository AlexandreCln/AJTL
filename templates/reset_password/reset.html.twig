{% extends 'layout.html.twig' %}

{% block title 'Changer le mot de passe' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('card_form_theme') }}
{% endblock %}

{% block body %}
    <div class="pt-4 container">
        <div class="wrap shadow">
            <div class="header-title">
            <span class="title">
                Changez de mot de passe !
            </span>

                {% form_theme resetForm 'form_themes/card_form_theme.html.twig' %}

                {{ form_start(resetForm) }}
                {{ form_row(resetForm.plainPassword) }}
                <div class="mt-4 container-form-btn">
                    <button type="submit" class="form-btn">Envoyer la modification</button>
                </div>
                {{ form_end(resetForm) }}
            </div>
        </div>
    </div>
{% endblock %}
